@{
  Layout = "_Layout";
}
@using Registrar.Models;
<header>
  <h1>Departments</h1>
</header>
<main>
  @if (@Model.Count == 0)
  {
    <h3>There are no courses yet.</h3>
  }
  <ul>
    @foreach (Department d in Model)
    {
      <li>@Html.ActionLink($"{d.Name}", "Details", new {id = d.DepartmentId})</li>
    }
  </ul>
  <p>@Html.ActionLink("Add a department", "Create")</p>
  <p>@Html.ActionLink("Go back to home", "Index", "Home")</p>
</main>