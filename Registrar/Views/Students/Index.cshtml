@{
  Layout = "_Layout";
}
@using Registrar.Models;
@model List<Registrar.Models.Student>;
<header>
  <h1>Students</h1>
</header>
<main>
  @if (@Model.Count == 0)
  {
    <h2>No Students have been added yet</h2>
  }
  @foreach (Student s in Model)
  {
    @Html.ActionLink($"{s.Name}", "Details", new {id = s.StudentId})
    <ul>
      @foreach (CourseStudent cs in s.CourseStudents)
      {
        <li>@Html.ActionLink($"{@cs.Course.Name}", "Details", "Courses", new { id = cs.Course.CourseId})</li>
      }
    </ul>

  }
  <p>@Html.ActionLink("Add student", "Create")</p>
  <p>@Html.ActionLink("Back Home", "Index", "Home")</p>
</main>